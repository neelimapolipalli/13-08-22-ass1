#include <stdio.h>

int main()
{
    char str1[70];
    int i=0,count=0,len;
    printf("Enter a string");
    gets(str1);
    for(i=0;str1[i]!='\0';i++)
    {
        len=i;
        {
            for(i=1;i<len;i++)
            {
                if(i%2==1)
                {
                    str1[i]=str1[i]-32;
                }
            }
            printf("%s",str1);
}
}
        
    
        return 0;
}
